CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) -c -o main.o main.c

school.o: school.c m.h
	$(CC) -c -o school.o school.c

clean:
	-$(RM) *~ \#*\# .*.swp $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean:
	clean
	oclean

re: $(OBJ)
	-$(RM) $(OBJ)
	$(CC) -c -o main.o main.c
	$(CC) -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
