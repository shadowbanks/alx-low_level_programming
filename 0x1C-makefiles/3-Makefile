CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c -o $@ $<

clean:
	-$(RM) *~ \#*\# .*.swp $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean:
	clean
	oclean

re: $(OBJ)
	-$(RM) $(OBJ)
	$(CC) -c -o main.o main.c
	$(CC) -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
